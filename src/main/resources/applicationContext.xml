<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">

    <!-- load the properties file: sport.properties-->
    <context:property-placeholder location="classpath:sport.properties"/>

    <bean id="myFortuneService"
          class="com.example.demo.RandomFortuneService">
    </bean>

    <!-- Define your beans here -->
    <bean id="myCoach"
          class="com.example.demo.TrackCoach">

        <!-- set up constructor injection -->
        <constructor-arg ref="myFortuneService"/>
    </bean>

    <bean id="myCricketCoach"
          class="com.example.demo.CricketCoach">

        <!-- set up setter injection -->
        <property name="fortuneService" ref="myFortuneService"/>

        <!--        inject literal values -->
        <!--        <property name="emailAddress" value="thebestcoach@luv2code.com"/>-->
        <!--        <property name="team" value="Sunrisers Huberabad"/>-->

        <property name="emailAddress" value="${foo.email}"/>
        <property name="team" value="${foo.team}"/>
    </bean>

    <bean id="myRandomCoach"
          class="com.example.demo.RandomCoach">

        <property name="fortuneService" ref="myFortuneService"/>
    </bean>

</beans>
